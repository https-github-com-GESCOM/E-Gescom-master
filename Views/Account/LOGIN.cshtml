
@{

    ViewBag.Title = "LOGIN";

}

@model Login.Models.LoginModel




<h1 class=" text-center mt-5 text-sucess">SIGN IN </h1>

    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="LOGIN.html">
                    <marquee>WELCOME TO GESCOM PLATFORM  </marquee>
                </a>


            </div>
        </div>
    </div>



    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4">

                    <form id='login' class='input-group-login' method="post" action="@Url.Action("Login","Account")">
                        @Html.HiddenFor(x => x.ReturnUrl)
                        
                        @if (Model != null && Model.IsError)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.Message
                            </div>
                        }

                        <div class="module-head">
                            <center><img src="~/Content/logo.png" class="img-responsive" /></center>

                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <!-- <span class="input-group-text" id="@Html.DisplayFor(x=> x.Email)"><i class="icon-user"></i></span>  -->
                                 <!--   @Html.TextBoxFor(x => x.Email, new { type = "Email Id", @class = "input-field", placeholder = "Email Id", aria_label = @Html.DisplayFor(x => x.Email), aria_describedby = @Html.DisplayFor(x => x.Email) })
                                    -->
                                    <input value="@(Model != null ? Model.Email : "")" name="Email" id="Email" type='email' class='input-field' placeholder='Email Id' size="40"
                    required>
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <!--  <span class="input-group-text" id="@Html.DisplayFor(x=> x.Password)"><i class="icon-lock"></i></span> -->
                                <!--    @Html.PasswordFor(x => x.Password, new { @class = "input-field", placeholder = "Your Password", aria_label = @Html.DisplayFor(x => x.Password), aria_describedby = @Html.DisplayFor(x => x.Password) })
                                    -->
                                    <input value="@(Model != null ? Model.Password : "")" name="Password" id="Password" type='password' class='input-field' placeholder='Password Id' size="40" 
                    required>
                                </div>
                            </div>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls clearfix">
                                    <button type="submit" class="btn btn-danger pull-right">Login</button>
                                    <p><a href="@Url.Action("REGISTER")">Sign Up</a></p>
                                    <p class="fs"><a href="@Url.Action("FORGOT_PASSWORD","Account", new {email = Model !=null ? Model.Email :" " } )">mot de passe oublier</a> ?</p>

                                    <label class="checkbox">
                                        <input type="checkbox"> Remember me

                                    </label>

                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


