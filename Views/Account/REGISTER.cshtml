



@{

    ViewBag.Title = "REGISTER";

}
@model Login.Models.RegisterModel

<center> <h1>Sign up</h1></center>

@if (Model != null && Model.IsError)
{
    <div class="alert alert-danger" role="alert">
        @Model.Message
    </div>
}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a>

                <a class="brand" href="Register.html">

                </a>


            </div>
        </div>
    </div>



    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module module-login span4 offset4">


                    <form method="post" action="@Url.Action("REGISTER", "Account")">


                        <div class="module-head">
                            <center><img src="~/Content/logo.png" class="img-responsive" /></center>

                        </div>
                        <div class="module-body">
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <label for="Nom">Nom Complet</label>:<br />
                                    <!--@Html.TextAreaFor(x => x.Nom, new { type = "email", @class="",placeholder="entrer votre Email", aria_label = Html.DisplayFor(x=> x.Email), aria_describedby = Html.DisplayFor(x => x.Email) })-->
                                    <input type="text" name="Nom" id="Nom" value="@(Model != null ? Model.Nom :  " ")" size="40" maxlength="40" placeholder="entrer votre nom" />
                                    <br />
                                    <br />
                                    @Html.ValidationMessageFor(x => x.Nom, null, new { @class = "small" })
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <label for="telephone">Telephone</label>:<br />
                                    <!--@Html.TextAreaFor(x => x.Telephone, new { type = "email", @class="",placeholder="entrer votre numero", aria_label = Html.DisplayFor(x=> x.Email), aria_describedby = Html.DisplayFor(x => x.Email) })-->
                                    <input type="tel" name="Telephone" id="Telephone" value="@(Model != null ? Model.Telephone :  " ")" size="40" maxlength="40" placeholder="entrer votre numero" />
                                    <br />
                                    <br />
                                    @Html.ValidationMessageFor(x => x.Telephone, null, new { @class = "small" })
                                </div>
                            </div>

                                         <div class="control-group">
                                <div class="controls row-fluid">
                                    <label for="Email">Email</label>:<br /><input type="email" name="Email" id="Email" value="@(Model != null ? Model.Email : " ")" size="40" maxlength="100" placeholder=" votre Email" /><br /><br />

                                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "small" })
                                </div>
                            </div>
                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <label for="pass">votre mot de passe</label>:<br /><input type="password" name="Password" id="Passcord" size="40" maxlength="40" value="@(Model != null ? Model.Password : " ")" placeholder="votre mot de passe" /><br /><br />
                                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = "small" })
                                </div>
                            </div>

                            <div class="control-group">
                                <div class="controls row-fluid">
                                    <label for="pass"> Confirmer votre mot de passe</label>:<br /><input type="password" name="ConfirmePassword" id="ConfirmePassword" size="40" maxlength="40" value="@(Model != null ? Model.ConfirmePassword : "")" placeholder="confirmer votre mot de passe" /><br /><br />
                                    @Html.ValidationMessageFor(x => x.ConfirmePassword, null, new { @class = "small" })
                                </div>
                            </div>
                        </div>
                                <div class="module-foot">
                                    <div class="control-group">
                                        <div class="controls clearfix">

                                            <button type="submit" class="btn btn-danger pull-right" style="background-color: green; border-color: green;">Connect</button>
                                            <a href="@Url.Action("LOGIN.html")"> </a>

                                        </div>
                                    </div>
                                </div>
</form>
                </div>
            </div>
        </div>
    </div>


